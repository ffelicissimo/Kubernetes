export KOPS_STATE_STORE=s3://kubernetes-production-operations 

kops create cluster \
    --node-count 30 \
    --zones us-east-1a,us-east-1c \
    --master-zones us-east-1a,us-east-1c \
    --node-size t2.micro \
    --master-size t2.small \
    --master-count 3 \
    --topology private \
    --networking calico \
    --bastion \
    --ssh-public-key fernando.pub \
    --vpc=vpc-64924501 \
    --dns-zone=magazineluiza.com \
    production.k8s.magazineluiza.com
